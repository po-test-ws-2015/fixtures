<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.testeditor.fixture</groupId>
	<artifactId>rest-fixture</artifactId>
	<version>1.7.2-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>${project.groupId}:${project.artifactId}</name>
	<description>Fixture used for testing REST applications.</description>
	<url>http://testeditor.org</url>

	<licenses>
		<license>
			<name>Eclipse Public License Version 1.0</name>
			<url>http://www.eclipse.org/legal/epl-v10.html</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Karsten Panier</name>
			<email>kpanier@aysada.org</email>
			<organization>Test-Editor</organization>
			<organizationUrl>http://www.testeditor.org</organizationUrl>
		</developer>
		<developer>
			<name>Matthias Holsten</name>
			<email>matthias.holsten@gmail.com</email>
			<organization>Test-Editor</organization>
			<organizationUrl>http://www.testeditor.org</organizationUrl>
		</developer>
		<developer>
			<name>Koray Bayraktar</name>
			<email>koray.bayraktar@akquinet.de</email>
			<organization>Test-Editor</organization>
			<organizationUrl>http://www.testeditor.org</organizationUrl>
		</developer>
		<developer>
			<name>Orhan Polat</name>
			<email>orhan.polat@akquinet.de</email>
			<organization>Test-Editor</organization>
			<organizationUrl>http://www.testeditor.org</organizationUrl>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:https://github.com/test-editor/rest-fixture</connection>
		<developerConnection>scm:git:https://github.com/test-editor/rest-fixture</developerConnection>
		<url>https://github.com/test-editor/rest-fixture</url>
	</scm>

	<dependencies>
		<dependency>
			<groupId>org.testeditor.fixture</groupId>
			<artifactId>core-fixture</artifactId>
			<version>1.7.2-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<!-- copy all jars to libs folder -->

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/libs</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>false</overWriteSnapshots>
							<overWriteIfNewer>true</overWriteIfNewer>
							<excludeArtifactIds>fitnesse</excludeArtifactIds>
						</configuration>
					</execution>
				</executions>

			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<sourceDirectory>${project.basedir}/src</sourceDirectory>
					<configLocation>${project.basedir}/checkstyle.xml
					</configLocation>
				</configuration>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<findbugsXmlOutput>true</findbugsXmlOutput>
					<failOnError>false</failOnError>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
